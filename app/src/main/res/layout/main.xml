<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"  
    android:background="@drawable/calendar_bg"
  
>
 <!-- 日试图的日期 -->
<com.bn.sn.BnScheduleManagerView  
 android:id="@+id/BnScheduleManagerView01" 
 android:layout_width="wrap_content"
 android:layout_height="60dip"
></com.bn.sn.BnScheduleManagerView>
<!-- 收缩控件 列表 -->
<FrameLayout
 android:orientation="vertical"
 android:layout_width="fill_parent"
 android:layout_height="fill_parent">	
<ExpandableListView
android:id="@+id/exlist01"
android:layout_height="fill_parent" 
android:layout_width="fill_parent"
android:cacheColorHint="#00000000"
android:layout_marginLeft="18dp"
></ExpandableListView>
<LinearLayout
	   	android:id="@+id/linear02"
	   	android:layout_width="fill_parent"
	    android:layout_height="250dp"
	   	android:layout_gravity="bottom"
	    >
		  <SlidingDrawer
		  	android:id="@+id/sliding01"
		  	android:layout_width="fill_parent"
		  	android:layout_height="wrap_content"
		  	android:handle="@+id/handleImage"
		  	android:content="@+id/contentShow"
		  	android:orientation="vertical"			  		
		  >		 
		  	<ImageView
		  		android:id="@+id/handleImage"
		  		android:layout_width="wrap_content"
		  		android:layout_height="wrap_content"
		  		android:src="@drawable/open"
		  	></ImageView>		  	
		  	<GridView
		  	android:id="@+id/contentShow"
		  	android:layout_width="wrap_content"
		  	android:layout_height="wrap_content"
		  	android:numColumns="3"
		  	android:gravity="center"
		  	android:background="@drawable/about_bg"
		  	></GridView>
		  </SlidingDrawer>
	  </LinearLayout>
</FrameLayout>


















