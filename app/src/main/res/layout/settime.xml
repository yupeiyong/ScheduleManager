<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:background="@drawable/selecttime_bg">
  
  <!-- 日历控件-->
	<com.bn.calendar.BNCalendar
	android:id="@+id/calendar01"
	android:layout_width="fill_parent"
  	android:layout_height="280dp"
	></com.bn.calendar.BNCalendar>
  <!-- 改变小时和分钟的组合 -->
  <LinearLayout
     android:orientation="horizontal"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:gravity="center"
    >
      <LinearLayout
      android:orientation="horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:paddingRight="5dp">
        <ImageButton
          android:id="@+id/addhour"
          android:background="@drawable/dateadd"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          />
       
          <EditText
            android:id="@+id/showhour"
			android:layout_width="60dip"
			android:layout_height="45dip"
			android:editable="false"
  			android:focusable="false"
  			android:gravity="center"
			android:textSize="20dip"
			android:maxLength="2"
			android:singleLine="true"
             />
        
        <ImageButton
          android:id="@+id/plushour"
          android:background="@drawable/dateminus"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          />
      </LinearLayout>
      <TextView
      	android:text=":"
      	android:textColor="@color/black"
      	android:textSize="20dip"
      	android:layout_width="wrap_content"
      	android:layout_height="wrap_content"
      	android:paddingBottom="5dp"
      ></TextView>
	   <LinearLayout
	      android:orientation="horizontal"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_gravity="center_vertical"
	      android:paddingLeft="5dp">
        <ImageButton
          android:id="@+id/addmin"
          android:background="@drawable/dateadd"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          />
        
          <EditText
            android:id="@+id/showmin"
			android:layout_width="60dip"
			android:layout_height="45dip"
			android:editable="false"
  			android:focusable="false"
  			android:gravity="center"
			android:textSize="20dip"
			android:maxLength="2"
			android:singleLine="true"
             />
      
        <ImageButton
          android:id="@+id/plusmin"
          android:background="@drawable/dateminus"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          />
      </LinearLayout>
    </LinearLayout>
  <!-- 下面的确定和取消按钮 -->
  <LinearLayout
  	android:orientation="horizontal"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:gravity="center_horizontal"
  	android:paddingBottom="10dp"
  	android:paddingTop="5dp"
  >
	  <Button
	  	android:id="@+id/dateok"
	  	android:layout_width="100dp"
	  	android:layout_height="wrap_content"
	  	android:text="@string/ok"
	  	android:layout_gravity="left"
	  	android:paddingRight="8dp"
	  ></Button>
	  <Button
	  	android:id="@+id/datecancel"
	  	android:layout_width="100dp"
	  	android:layout_height="wrap_content"
	  	android:text="@string/cancle"
	  	android:layout_gravity="right"
	  	android:paddingLeft="8dp"
	  ></Button>
  </LinearLayout>
</LinearLayout>










  